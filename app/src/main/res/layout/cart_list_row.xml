<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_image_view_row"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_text_view_row"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_weight="1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_weight="7"
        android:layout_toRightOf="@id/icon_image_view_row"
        android:id="@+id/name_text_view_row"
        android:gravity="center"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/price_text_view_row"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/icon_image_view_row"
        android:layout_alignEnd="@+id/name_text_view_row"
        android:layout_alignRight="@+id/name_text_view_row"
        android:padding="5dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="Remove" />
</RelativeLayout>